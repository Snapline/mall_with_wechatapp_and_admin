page {
	background-color: #fff;
}
#feedback {
    margin-bottom: 88rpx;
}
#feedback .feedback-cell {
    overflow: hidden;
    margin: 40rpx;
}
#feedback .feedback-cell .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: top;
}
.avatar {
    height: 136rpx;
    line-height: 136rpx;
    font-size: 28rpx;
    border-top: 1px solid #eeeff0;
    clear: both;
}
#feedback .feedback-cell.feedback-cell-system .bubble {
    background-color: #fee0e5;
    border: 1px solid #fec0c9;
    margin: 0 20rpx;
    display: inline-block;
}
#feedback .feedback-cell .bubble {
    padding: 20rpx;
    border-radius: 12rpx;
    color: #333333;
    font-size: 28rpx;
    line-height: 32rpx;
    max-width: 440rpx;
    position: relative;
}
#feedback .feedback-cell.feedback-cell-system .bubble .wedge {
    background-color: #fee0e5;
    border: 1px solid #fec0c9;
    border-width: 0 0 1px 1px;
    left: -10rpx;
    top: 26rpx;
}
#feedback .feedback-cell .bubble .wedge {
    display: block;
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border-radius: 4rpx;
    transform: rotate(45deg);
}
#feedback .reply-box {
    width: 100%;
    height: 96rpx;
    background: #efefef;
    position: fixed;
    bottom: 0;
    border-top: 1px solid #d6d6d6;
}
#feedback .reply-box input {
	display: inline-block;
    margin: 12rpx 12rpx;
    margin-right: 0;
    height: 72rpx;
    width: 560rpx;
    border-radius: 10rpx;
    border: 1px solid #d6d6d6;
    outline: none;
    padding: 0 20rpx;
    font-size: 24rpx;
    background-color: #fff;
}
#feedback .reply-box button.send {
    width: 96rpx;
    height: 96rpx;
    float: right;
    display: inline-block;
    padding: 10rpx 40rpx 0 0;
    background: none;
    font-size: 28rpx;
    color: #353535;
}
#feedback .reply-box button.send:after{
	border: none;
}
