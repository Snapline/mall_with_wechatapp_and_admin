
page{
  background: #f6f8f9;
}

.title_row{
  margin-top:30rpx;
  margin-left:20rpx;
  font-size:30rpx;
}

.item_row{
  width:100%;
  background: #fff;
  height:100rpx;
  line-height:100rpx;
  vertical-align: middle;
  padding:0 20rpx ;
  margin: 30rpx auto
}

.price, .amount{
  float: right;
  display: block;
  width:25%;
  text-align: center
}

.price{
  color:orange;
}

.amount{
  color:lawngreen;
}

.add-car, .cancel-car{
  width:90%;
  margin: 30rpx auto;
}

.add-car{
  background: orange;
}

.minus, .plus{
  vertical-align: middle;
  display: flex;
}

.pick_area{
  display: inline-block;
  margin-left:20%;
  width:40%;
}

.box{
  display: flex;
  height:70rpx;
  padding-top:10rpx;
   flex-direction: row;
   justify-content:space-between; 
   align-items: center;
}
